<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_back"/>
            <corners
                android:bottomLeftRadius="@dimen/cornerround"
                android:bottomRightRadius="@dimen/cornerround"
                android:topRightRadius="@dimen/cornerround"
                android:topLeftRadius="@dimen/cornerround"
                />

        </shape>
    </item>

    <item android:top="110dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ManualScanned"/>
            <corners
                android:bottomRightRadius="@dimen/cornerround"
                android:bottomLeftRadius="@dimen/cornerround"
                />
        </shape>
    </item>

    <item android:top="0dp" android:bottom="0dp" android:left="-2dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/roomcolour" />
            <corners
                android:bottomRightRadius="@dimen/cornerround"
                android:topRightRadius="@dimen/cornerround"
                android:topLeftRadius="@dimen/cornerround"
                android:bottomLeftRadius="@dimen/cornerround"
                />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>