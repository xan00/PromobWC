        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lbljobdetail3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbljobdetail3" />

    <TextView
        android:id="@+id/jobInputHeader"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/roomcolour"
        android:text="Job Input"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbljobdetail3" />

    <TextView
        android:id="@+id/lbljobinput1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Input 1: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_detail_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobInputHeader" />

    <TextView
        android:id="@+id/txtjobInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/textinput_shape"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="4dp"
        android:paddingEnd="25dp"
        android:paddingBottom="4dp"
        android:text="@string/_12345"
        android:textColor="@color/colorTextLight"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lbljobinput1"
        app:layout_constraintStart_toEndOf="@+id/lbljobinput1" />

    <TextView
        android:id="@+id/lbljobinput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Input 2: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_detail_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtjobInput1"
