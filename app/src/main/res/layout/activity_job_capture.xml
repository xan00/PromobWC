    <TextView
        android:id="@+id/txtfragMeterNumber"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lbljobmeterno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbljobmeterno" />

    <TextView
        android:id="@+id/txtfragMeterType"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lbljobmetertype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbljobmetertype" />

    <TextView
        android:id="@+id/txtfragjobdetail1"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lbljobdetail1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbljobdetail1" />

    <TextView
