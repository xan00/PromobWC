<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cslJobCapture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_back">

    <TextView
        android:id="@+id/jobTopHeader"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:background="@color/roomcolour"
        android:text="@string/job_information"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblJobNum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Number: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobTopHeader" />

    <TextView
        android:id="@+id/lblJobType"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Type: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblJobNum" />

    <TextView
        android:id="@+id/lblJobStatus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblJobType" />

    <TextView
        android:id="@+id/lblJobAddress"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblJobStatus" />


    <TextView
        android:id="@+id/txtfragJobNumber"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblJobNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblJobNum" />

    <TextView
        android:id="@+id/txtfragJobtype"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblJobType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblJobType" />

    <TextView
        android:id="@+id/txtfragJobStatus"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblJobStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblJobStatus" />

    <TextView
        android:id="@+id/txtfragJobAddress"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_shape"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="13sp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblJobAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblJobAddress"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/jobTypeHeader"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/roomcolour"
        android:text="Type Information"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtfragJobAddress" />

    <TextView
        android:id="@+id/lbljobmeterno"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meter No: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobTypeHeader" />

    <TextView
        android:id="@+id/lbljobmetertype"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meter Type: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbljobmeterno" />

    <TextView
        android:id="@+id/lbljobdetail1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Detail 1: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbljobmetertype" />

    <TextView
        android:id="@+id/lbljobdetail2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Detail 2: "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_detail_label"
