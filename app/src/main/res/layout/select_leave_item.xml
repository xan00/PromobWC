<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_activity_hr_select_leave"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_leave"
    android:bottomLeftRadius="7dp"
    android:bottomRightRadius="7dp"
    android:focusable="true"
    android:paddingStart="11dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    android:shape="rectangle"
    android:topLeftRadius="7dp"
    android:topRightRadius="7dp"
    tools:clickable="true">

    <TextView
        android:id="@+id/txt_leave_req_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="top|start"
        android:text="date_holder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Request Date: "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/leave_type"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtSelectLeaveReqType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView78"
        app:layout_constraintStart_toEndOf="@+id/textView78"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtSelectLeaveStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView82"
        app:layout_constraintStart_toEndOf="@+id/textView82" />

    <TextView
        android:id="@+id/txtSelectLeaveEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView83"
        app:layout_constraintStart_toEndOf="@+id/textView83" />

    <TextView
        android:id="@+id/textView80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/leave_days_requested"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSelectLeaveReqType"
        app:layout_constraintStart_toEndOf="@+id/txtSelectLeaveReqType" />

    <TextView
        android:id="@+id/textView83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/end_date"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSelectLeaveStart"
        app:layout_constraintStart_toEndOf="@+id/txtSelectLeaveStart" />

    <TextView
        android:id="@+id/txtSelectLeaveReqDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView80"
        app:layout_constraintStart_toEndOf="@+id/textView80" />

    <TextView
        android:id="@+id/textView82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/start_date"
        android:textColor="@color/black"
        android:textSize="@dimen/select_leave_small_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView78" />

    <TextView
        android:id="@+id/txtSelectLeaveReqID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>