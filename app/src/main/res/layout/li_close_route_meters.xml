<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_meter_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_shape"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/li_close_route_meters_child_meter_type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/w"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource" />

    <TextView
        android:id="@+id/li_close_route_meters_child_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/address"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/li_close_route_meters_child_meter_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/li_close_route_meters_child_meter_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/_123456"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/li_close_route_meters_child_meter_number_header"
        app:layout_constraintStart_toEndOf="@+id/li_close_route_meters_child_meter_number_header" />

    <TextView
        android:id="@+id/li_close_route_meters_child_meter_number_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/meter_number"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/li_close_route_meters_child_meter_type"
        app:layout_constraintTop_toBottomOf="@+id/li_close_route_meters_child_address" />

    <TextView
        android:id="@+id/li_close_route_meters_child_Inst_Node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/li_close_route_meters_child_Mob_Node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/li_close_route_meters_child_Cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
