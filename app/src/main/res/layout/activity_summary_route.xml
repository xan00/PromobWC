<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_back"
    android:fitsSystemWindows="true"
    tools:context="za.co.rdata.r_datamobile.meterReadingModule.SummaryRouteActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/room_item"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/A_close_route_child_RouteNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@mipmap/ic__promun_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/A_close_route_child_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/route_summary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorTextLight" />
    </RelativeLayout>

    <TextView
        android:id="@+id/A_close_route_child_RouteNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/roomcolour"
        android:gravity="center"
        android:text="@string/route_777"
        android:textColor="@color/colorTextLight"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/A_close_route_child_RouteDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/A_close_route_child_RouteDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/roomcolour"
        android:gravity="center"
        android:text="@string/description"
        android:textColor="@color/colorTextLight"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/A_close_route_LV_meters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A_close_route_child_RouteNumber" />

    <ListView
        android:id="@+id/A_close_route_LV_meters"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintStart_toStartOf="@+id/A_close_route_child_RouteDescription"
        app:layout_constraintTop_toBottomOf="@+id/A_close_route_child_RouteDescription" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/A_close_route_child_B_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
